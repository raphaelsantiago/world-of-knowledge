# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build knowledge-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t knowledge-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system knowledge-app && \
          adduser --system -G knowledge-app knowledge-app

COPY dist/knowledge-app knowledge-app/
RUN chown -R knowledge-app:knowledge-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix knowledge-app --omit=dev -f install

CMD [ "node", "knowledge-app" ]
